@model Service
<div class="d-flex justify-content-between align-items-center container-fluid">
    <h1>Update a Service</h1>
</div>
<div class="container-fluid">
    <form method="post" class="row">
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Title</label>
            <input asp-for="Title" type="text" class="form-control">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Desc</label>
            <input asp-for="Description" type="text" class="form-control">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3 col-md-4">
            <label for="" class="form-label">Icon</label>
            <input asp-for="Logo" type="text" class="form-control">
            <span asp-validation-for="Logo" style="color:red"></span>
        </div>
        <button style="width: 100px" type="submit" class="btn btn-primary">Update</button>
    </form>
</div>